<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MobileNews.Base" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorControlNormal">@color/color_black</item>

        <item name="android:textViewStyle">@style/Theme.MobileNews.DefaultTextView</item>
        <item name="materialCardViewStyle">@style/Theme.MobileNews.MaterialCardView.Default</item>
        <item name="cardViewStyle">@style/Theme.MobileNews.CardView.Default</item>
        <item name="recyclerViewStyle">@style/Theme.MobileNews.RecyclerView.Default</item>
    </style>

    <style name="Theme.MobileNews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MobileNews.DefaultTextView" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">@font/font_family_rubik</item>
    </style>

    <style name="Theme.MobileNews.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="elevation">0dp</item>
<!--        <item name="android:background">@color/color_background</item>-->
    </style>

    <style name="Theme.MobileNews.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
<!--        <item name="android:background">@color/color_background</item>-->
        <item name="android:fontFamily">@font/font_family_rubik</item>
    </style>

</resources>